<div class="row">
  <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1 text-center">
    <% if gigs.blank? %>
      <h4 class="alert alert-warning">There are no gig created yet</h4>
    <% end %>
  </div>
  <% gigs.each do |gig| %>
    <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1">
      <div class="ui-block shadow-lg rounded">
        <div class="ui-block-content">
          <div class="row">
            <div class="col-sm-12 text-right mb-2">
              <% if gig.user == current_user %>
                <%= link_to edit_gig_path(gig), class: 'btn btn-primary' do %>
                  Edit
                <% end %>
                <% if gig.persisted? %>
                  <div class="float-right pl-3">
                    <%= link_to 'Destroy', gig, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-lg-12">
                  <h2>
                    <%= link_to gig.title, gig_path(gig), class: 'text-dark' %>
                  </h2>
                </div>
              </div>
              <em>Author: <%= gig.user.name %></em><br>
              <em><%= gig.created_at.strftime('%d-%m-%Y') %></em>
            </div>
            <div class="col-md-12">
              <p><%= gig.area_tag %></p>
            </div>
            <div class="col-md-12">
              <p><%= gig.body %></p>
            </div>
            <div class="col-md-12">
              <p><%= gig.amount %></p>
            </div>
            <% if gig.images.present? %>
              <div class="col-md-12">
              <%= gig.images.each do |image|  %>
                <div class="col-md-3">
                  <%= image_tag(image, :class => "img-responsive", width: "250") %>
                </div>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>