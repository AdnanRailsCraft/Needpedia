<%= render 'shared/offer_buttons' %>

<div class="container mb-5">
  <div class="row mt-1">
    <div class="col-md-12 text-center mb-2">
      <h1><%= @gig.title %></h1>
    </div>
    <div class="col-md-12 mb-2">
      <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto">
          <div class="ui-block shadow-lg rounded">
            <div class="ui-block-content">
              <div class="row">
                <div class="col-sm-3 text-left mb-2">
                  <%= link_to gigs_path, class: 'btn btn-primary' do %>
                    Back
                  <% end %>
                </div>

                <div class="col-sm-9 text-right mb-2">
                  <% if @gig.user == current_user %>
                    <%= link_to edit_gig_path(@gig), class: 'btn btn-primary' do %>
                      Edit
                    <% end %>
                  <% end %>
                </div>
                <div class="col-lg-12 col-md-12 ml-auto mr-auto">
                  <%= @gig.area_tag %>
                </div>
                <div class="col-lg-12 col-md-12 ml-auto mr-auto">
                  <%= @gig.body %>
                </div>
                <div class="col-lg-12 col-md-12 ml-auto mr-auto">
                  <%= @gig.amount %>
                </div>
                <% if @gig.images.present? %>
                   <div class="col-lg-12 col-md-12 ml-auto mr-auto">
                  <%= @gig.images.each do |image|  %>
                    <div class="col-md-3">
                      <%= image_tag(image, :class => "img-responsive", width: "250") %>
                    </div>
                  <% end %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>