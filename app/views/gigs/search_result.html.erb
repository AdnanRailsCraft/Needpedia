<%= render 'shared/offer_buttons' %>

<div class="container mb-5">
  <div class="row mt-3">
    <div class="col-md-12 text-center mb-2">
      <h1><b>Search results</b></h1>
    </div>
    <div class="col-md-12">
      <div class="row">
        <div class="col-sm-6">
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1 text-center">
          <% if @gigs.blank? %>
            <h4 class="alert alert-warning">No results found</h4>
          <% end %>
        </div>
        <% @gigs.each do |gig| %>
          <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1">
            <div class="ui-block shadow-lg rounded">
              <div class="ui-block-content">
                <div class="row">
                  <div class="col-md-6">
                    <em>Author: <%= gig.user.name %></em><br>
                    <em><%= gig.created_at.strftime('%d-%m-%Y') %></em>
                  </div>
                  <div class="col-md-12">
                    <p><%= gig.area_tag %></p>
                  </div>
                  <div class="col-md-12">
                    <p><%= gig.body %></p>
                  </div>
                  <div class="col-md-12">
                    <p><%= gig.amount %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>