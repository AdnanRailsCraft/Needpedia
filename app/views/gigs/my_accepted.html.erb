<%= render 'shared/offer_buttons' %>

<div class="container mb-5">
  <div class="row mt-3">
    <div class="col-md-12 text-center mb-2">
      <h1><b>My Gigs</b></h1>
    </div>
    <div class="col-md-12">
      <div class="row">
        <div class="col-sm-6">
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1 text-center">
          <% if @gigs.blank? %>
            <h4 class="alert alert-warning">You have not accepted any gig yet</h4>
          <% end %>
        </div>
      </div>
      <%= render 'list', { gigs: @gigs, search: true } %>
    </div>
  </div>
</div>
</div>
