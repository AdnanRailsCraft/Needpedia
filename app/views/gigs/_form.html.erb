<%= form_with(model: gig, local: true) do |form| %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= form.text_field :title, autofocus: true, class: 'form-control', placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= form.text_field :area_tag, autofocus: true, class: 'form-control', placeholder: "Area tag" %>
  </div>

  <div class="form-group">
    <%= form.rich_text_area :body, autofocus: true, class: 'form-control', placeholder: "Body" %>
  </div>

  <div class="form-group">
    <%= form.number_field :amount, autofocus: true, class: 'form-control', placeholder: "Amount" %>
  </div>

  <div class="form-group">
    <%= form.file_field :images, multiple: true%>
  </div>

  <% if gig.images.present? %>
    <div class="col-lg-12 col-md-12 ml-auto mr-auto">
      <%= gig.images.each do |image|  %>
        <div class="col-md-3">
          <%= image_tag(image, :class => "img-responsive", width: "250") %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <% if gig.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', gig, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
