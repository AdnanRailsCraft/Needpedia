<nav id="sidebar">
  <div class="p-4 pt-5">
    <div class="image-part ml-3">
      <% if @user.profile_image.attached? %>
        <%= image_tag(@user.profile_image.variant(resize: "250x250"), class: 'img logo rounded-circle mb-2', alt: "Avatar") %>
      <% else %>
        <%= image_tag('img_avatar.png', class: 'img logo rounded-circle mb-2', alt: "Avatar") %>
      <% end %>
      <% if current_user == @user %>
        <div class="middle">
          <%= link_to profile_image_path, remote: true, class: 'text' do %>
            Change
          <% end %>
        </div>
      <% end %>
    </div>
    <h4><%= @user.name %></h4>
    <div class="ml-1 container">
      <% if current_user.present? %>
        <% if current_user.id != @user.id %>
          <% if @user.connection_status(current_user)[:status] == 'request_sent' %>
            <a href="javascript:void(0);" class="btn waves-effect waves-light btn-rounded btn-primary">Request
              Sent</a>
          <% elsif @user.connection_status(current_user)[:status] == 'request_received' || request_recieved?(@user.id, current_user.uuid) %>
            <%= link_to 'Accept', accept_invitation_path(:uuid => @user.connection_status(current_user)[:request_uuid]), class: 'btn waves-effect waves-light btn-rounded btn-primary btn-block' %>
          <% elsif @user.connection_status(current_user)[:status] == 'connected' %>
            <%= link_to 'Unfriend', un_friend_path(uuid: @user.uuid, redirect: 'friend'), method: :delete, class: 'btn waves-effect waves-light btn-rounded btn-primary ml-2', data: { confirm: "Are you sure?" } %>
          <% else %>
            <%= link_to 'Add Friend', new_connection_request_path(:uuid => @user.uuid), class: 'btn waves-effect waves-light btn-rounded btn-primary' %>
          <% end %>
        <% end %>

      <% else %>
        <%= link_to 'Add Friend', new_connection_request_path(:uuid => @user.uuid), class: 'btn waves-effect waves-light btn-rounded btn-primary' %>
      <% end %>

    </div>
    <ul class="list-unstyled components mb-5">
      <li>
        <%= link_to 'Wall', wall_path(uuid: @uuid) %>
      </li>
      <li>
        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Friends</a>
        <ul class="collapse list-unstyled" id="pageSubmenu">
          <li>
            <%= link_to "Friends (#{@friends_count.count})", friends_path(uuid: @uuid) %>
          </li>
          <% if current_user.uuid == @user.uuid %>
            <li>
              <%= link_to "Request (#{@connection_requests_count.count})", friend_request_path(uuid: @uuid) %>
            </li>
            <% end %>
        </ul>
      </li>
      <li>
        <%= link_to 'Pictures', pictures_path(uuid: @uuid) %>
      </li>
      <li>
        <%= link_to 'About', about_path(uuid: @uuid) %>
      </li>
      <li>
        <%= link_to 'Tracking', tracking_path(uuid: @uuid) %>
      </li>
      <li>
        <%= link_to 'Debate Tokens', debate_tokens_path(uuid: @uuid) %>
      </li>
      <li>
        <%= link_to 'Question Tokens', question_tokens_path(uuid: @uuid) %>
      </li>
      <li>
        <%= link_to 'Notes Tokens', note_tokens_path(uuid: @uuid) %>
      </li>
      <li>
        <%= link_to "Setting", edit_user_registration_path %>
      </li>
      <li>
        <%= link_to registration_path(current_user), data: { confirm: "Are you sure? You cannot undo this." }, method: :delete do %>
          <p class="text-danger">Deactivate my account</p>
        <% end %>
      </li>

    </ul>
  </div>
</nav>