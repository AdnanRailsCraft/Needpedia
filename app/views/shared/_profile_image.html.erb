<% if user.profile_image.attached? %>
  <%= image_tag(user.profile_image, class: 'img-fluid rounded-circle mb-2', style: 'width: 120px; height: 120px; object-fit: cover;', alt: "Avatar") %>
<% else %>
  <%= image_tag('img_avatar.png', class: 'img-fluid rounded-circle mb-2', style: 'width: 120px; height: 120px; object-fit: cover;', alt: "Avatar") %>
<% end %>
