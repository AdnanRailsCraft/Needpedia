<div class="container mb-10">
  <%= form_with(model: @user, url: update_details_path, local: true) do |form| %>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <% if current_user.profile_image.present? %>
      <%= image_tag(current_user.profile_image.variant(resize: "250x250"), class: 'img mb-2', alt: "Avatar") %>
    <% end %>

    <div class="form-group">
      <%= form.label :profile_image %>:<br/>
      <%= form.file_field :profile_image, accept: 'image/jpeg, image/png' %>
    </div>

    <div class="form-group">
      <%= form.label :location %>:<br/>
      <%= form.text_field :location, autofocus: true, class: 'form-control', placeholder: "Location" %>
    </div>

    <div class="form-group">
      <%= form.label :about %>:<br/>
      <%= form.rich_text_area :about, autofocus: true, class: 'form-control', placeholder: "About" %>
    </div>


    <div class="form-group">
      <%= form.label :pictures %>:<br/>
      <%= form.file_field :pictures, multiple: true, accept: 'image/jpeg, image/png' %>
    </div>

    <% if current_user.pictures.present? %>
      <% current_user.pictures.each do |picture| %>
        <div class="col-3 mb-2 float-left">
          <%= image_tag(picture, class: 'rounded img-fluid', alt: "Nature") %>
        </div>
      <% end %>
    <% end %>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
