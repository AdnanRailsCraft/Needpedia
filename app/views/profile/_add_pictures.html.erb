<div class="container">
  <div class="col-lg-12 col-md-12 mr-auto">
    <h1 class="text-center">Add Pictures</h1>
    <div class="row">
      <%= form_with(model: user, url: create_pictures_path, method: 'post', remote: true, local: true) do |form| %>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="form-group">
          <%= form.file_field :pictures, multiple: true, accept: 'image/jpeg, image/png' %>
        </div>

        <div class="row">
          <% if current_user.pictures.present? %>
            <% current_user.pictures.each do |picture| %>
              <div class="col-3 mb-2 float-left">
                <%= image_tag(picture, class: 'rounded img-fluid', alt: "Nature") %>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
