<div class="row">
  <% if posts.blank? %>
    <div class="col-lg-12 text-center">
      <div class="alert alert-warning">
        Not dropped any Token yet
      </div>
    </div>
  <% end %>
  <% posts.each do |post| %>
    <div class="col-lg-12">
      <h5>
        <span>
          <%= post_token(post, @user).created_at.strftime('%m/%d/%Y %l:%M %p') %>:
        </span>
        <%= link_to post_path(post.id) do %>
          <span class="<%= post_type_color(post.post_type) %>">
            <%= post.title %>
          </span>
        <% end %>
      </h5>
    </div>
  <% end %>
</div>