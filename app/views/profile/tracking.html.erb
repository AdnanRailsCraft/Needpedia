<div class="wrapper d-flex align-items-stretch mb-10">
  <%= render 'shared/sidebar' %>

  <!-- Page Content  -->
  <div id="content" class="pl-2">

    <div class="row">
      <div class="col-lg-12 col-md-12 ml-auto mr-auto">
        <div class="ui-block shadow-lg rounded">
          <div class="ui-block-content">
            <div class="container">
              <div id="about_location">
                <div class="row mb-2">
                  <div class="col-lg-6 col-md-6 text-left">
                    <h4 class="pl-0">Tracking:</h4>
                  </div>
                </div>
                <div class="row">
                  <% if @tracking_posts.blank? %>
                    <div class="col-lg-12 text-center">
                      <div class="alert alert-warning">
                        Not tracking any post yet
                      </div>
                    </div>
                  <% end %>
                  <% @tracking_posts.each do |pt| %>
                    <div class="col-lg-12">
                      <h5>
                        <span>
                          <%= pt.created_at.strftime('%m/%d/%Y%l:%M %p') %>:
                        </span>
                          <%= link_to post_path(pt.post.id) do %>
                            <span class="<%= post_type_color(pt.post.post_type) %>">
                              <%= pt.post.title %>
                            </span>
                          <% end %>
                      </h5>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>