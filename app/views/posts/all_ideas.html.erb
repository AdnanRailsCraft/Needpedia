<div class="container mb-5">
  <div class="row mt-3">
    <div class="col-md-12 text-center mb-2">
      <h1><b>Idea</b></h1>
    </div>
    <div class="col-md-12">
      <div class="row mb-2">
        <div class="col-sm-6">
          <%= link_to 'Back', posts_path(post_type: Post::POST_TYPE_SUBJECT), class: 'btn btn-primary' %>
        </div>

        <div class="col-sm-6 text-right">
          <%= link_to new_post_path(post_type: Post::POST_TYPE_IDEA, problem_id: Post::GENERAL_PROBLEM), class: 'btn btn-primary' do %>
            Create Idea Post
          <% end %>
        </div>
      </div>

      <%= render 'list', posts: @posts, type: Post::POST_TYPE_IDEA %>
    </div>
  </div>
</div>
