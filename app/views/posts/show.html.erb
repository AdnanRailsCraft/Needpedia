<div class="container mb-5">
  <div class="row mt-1">
    <div class="col-md-12 text-center mb-2">
      <h1 class="<%= post_type_color(@post.post_type) %>"><%= @post.title %> </h1>
    </div>
    <div class="col-md-12 mb-2">
      <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto">
          <div class="ui-block shadow-lg rounded">
            <div class="ui-block-content">
              <div class="row">
                <div class="col-sm-3 text-left mb-2">
                  <%= link_to posts_path, class: 'btn btn-primary' do %>
                    Back
                  <% end %>
                </div>

                <div class="col-sm-9 text-right mb-2">
                  <% if @post.post_type != Post::POST_TYPE_LAYER %>
                    <%= link_to 'Add Layer', new_post_path(post_type: Post::POST_TYPE_LAYER, post_id: @post.id), class: 'btn btn-primary' %>
                    <%= link_to 'Layers', post_layers_path(@post, post_type: Post::POST_TYPE_LAYER), class: 'btn btn-yellow' %>
                  <% end %>
                  <%= link_to 'Problems', all_problems_posts_path(), class: 'btn btn-danger' %>
                  <%= link_to 'Proposals', all_proposals_posts_path(), class: 'btn btn-purple' %>
                  <%= link_to 'Ideas', all_ideas_posts_path(), class: 'btn btn-success' %>
                  <% if @post.user == current_user %>
                    <%= link_to edit_post_path(@post), class: 'btn btn-primary' do %>
                      Edit
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-12 col-md-12 ml-auto mr-auto">
          <div class="ui-block shadow-lg rounded">
            <div class="ui-block-content">
              <div class="row">
                <div class="col-lg-12 col-md-12 ml-auto mr-auto mb-5">
                  <%= @post.content %>
                  <%= 'No details provided' if @post.content.blank? %>
                </div>
                <div class="col-md-12 border-top border-comments">
                  <div class="row mt-3">
                    <div class="col-md-12 mb-2">
                      <div class="row">
                        <div class="col-md-2">
                          <h5>
                            <% if @post.flags.pluck(:user_id).include?(current_user.id) %>
                              <%= link_to flag_path(id: @post.id), class: 'btn btn-primary', remote: true, :method => :delete do %>
                                <i class="fa fa-flag" title="Flag this post" aria-hidden="true"></i>
                              <% end %>
                            <% else %>
                              <%= link_to reason_modal_flags_path(post_id: @post.id), class: 'btn btn-secondary', remote: true do %>
                                <i class="fa fa-flag-checkered" title="Un-Flag this post" aria-hidden="true"></i>
                              <% end %>
                            <% end %>
                            <span class="pl-2"><%= @post.flags.count %></span>
                          </h5>
                          <h5></h5>
                        </div>
                        <div class="col-md-9">
                          <div class="mb-5">
                            <%= render 'comments/form', comment: @comment, layer: @post %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <h4><%= @post.comments.count %> Comments</h4>
                  <%= render 'comments/list', {comments: @post.comments, post: @post} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
