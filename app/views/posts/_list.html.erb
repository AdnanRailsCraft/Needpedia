<div class="row">
  <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1 text-center">
    <% if @keywords.nil? %>
      <% if posts.blank? && type.present? %>
        <h4 class="alert alert-warning">There are no <%= type.pluralize.titleize %> created yet <%= "for #{@post.title}" if @post.present? %></h4>
      <% end %>
    <% else %>
      <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1 text-center">
          <h5 class="alert alert-info"><%= @posts.count %> results found <%= "for '#{@keywords[:title_cont]}'" if @keywords[:title_cont].present? %></h5>
        </div>
      </div>
    <% end %>
  </div>
  <% posts.each do |post| %>
    <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1">
      <div class="ui-block shadow-lg rounded">
        <div class="ui-block-content">
          <div class="row">
            <div class="col-md-8">
              <div class="row">
                <div class="col-lg-12">
                  <h2>
                    <span class="<%= post_type_color(post.post_type) %>"><%= post.post_type.titleize %>: </span>
                    <%= link_to post.title, post_path(post), class: 'text-dark' %>
                  </h2>
                </div>
              </div>
              <em>Author: <%= post.user.name %></em><br>
              <em><%= post.created_at.strftime('%d-%m-%Y') %></em>
            </div>
            <div class="col-md-4 text-right">
              <% if post.post_type == Post::POST_TYPE_AREA %>
                <%= link_to 'Problems', post_problems_path(post_id: post.id, post_type: Post::POST_TYPE_PROBLEM), class: 'btn btn-danger' %>
                <%= link_to 'Proposals', post_proposals_path(post_id: post.id, post_type: Post::POST_TYPE_PROPOSAL), class: 'btn btn-default btn-purple pr-2' %>
              <% else %>
              <% end %>
            </div>
            <div class="col-md-12">
              <p>Tags: <%= raw post.tag_list.map { |t| link_to "##{t}", tag_path(t) }.join(', ') %></p>

              <p><%= post.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>