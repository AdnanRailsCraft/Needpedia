<% @comments.each do |comment| %>
  <div class="col-lg-12 col-md-12 ml-auto mr-auto pb-1">
    <div class="media border border-comments p-3">
      <div class="media-body"><h5 class="media-heading"><%= comment.user.name %></h5>
        <p><%= comment.body %></p>
        <ul class="list-unstyled list-inline media-detail pull-left">
          <li><i class="fa fa-calendar"></i> <%= comment.created_at.strftime('%d-%m-%Y') %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
